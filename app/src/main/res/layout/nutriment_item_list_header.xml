<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nutriment_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/nutriment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_weight="1.5"
        android:text="@string/nutrition_header"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/nutriment_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/for_100g"
        android:textSize="@dimen/font_normal" />

    <TextView
        android:id="@+id/nutriment_serving_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/serving"
        android:textSize="@dimen/font_normal" />

</LinearLayout>